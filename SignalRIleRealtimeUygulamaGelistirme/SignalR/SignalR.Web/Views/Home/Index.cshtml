@{
    ViewData["Title"] = "Home Page";
}
@section Scripts {
    <script src="~/js/signalr-client.js"></script>
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div id="divConnectionId" class="alert alert-primary" role="alert"></div>
            <div class="card shadow-sm d-inline-flex flex-row align-items-center px-3 py-2 mx-1 my-1 border-primary">
                <i class="bi bi-broadcast text-primary me-2 fs-5"></i>
                <span class="text-muted small me-2">Online:</span>
                <span id="spanConnectedClientCount" class="badge rounded-pill bg-success fs-6 px-3">0</span>
            </div>

            <button id="btnSendMessageAllClient" class="btn btn-outline-primary mx-1 my-1">Tüm Clientlara Gönder</button>
            <button id="btnSendMessageCallerClient" class="btn btn-outline-primary mx-1 my-1">İstek Yapan Client'a Gönder</button>
            <button id="btnSendMessageOthersClient" class="btn btn-outline-primary mx-1 my-1">İstek Yapan Dışındaki Diğer Clientlar'a Gönder</button>
            <div>
                <hr/>
                <input type="text" id="txtConnectionId" class="form-control-plaintext mx-1 my-1" placeholder="Connection Id"/>
                <button id="btnSendMessageIndividualClient" class="btn btn-outline-primary mx-1 my-1">Spesifik bir Client'a Gönder</button>
            </div>
            <br/>
            <br/>
            
            <div>
                <hr/>
                <div id="groupList" class="alert alert-warning" role="alert"></div>
                <button id="btnGroupAAdd" class="btn btn-success mx-1 my-1">A Grubuna Katıl</button>
                <button id="btnGroupARemove" class="btn btn-danger mx-1 my-1">A Grubundan Çık</button>
                <button id="btnGroupBAdd" class="btn btn-success mx-1 my-1">B Grubuna Katıl</button>
                <button id="btnGroupBRemove" class="btn btn-danger mx-1 my-1">B Grubundan Çık</button>
                <button id="btnGroupASendMessage" class="btn btn-secondary mx-1 my-1">A Grubuna Mesaj Gönder</button>
                <button id="btnGroupBSendMessage" class="btn btn-dark mx-1 my-1">B Grubuna Mesaj Gönder</button>
            </div>
            
            <button id="btnSendTypedMessageAllClient" class="btn btn-outline-primary mx-1 my-1">İstek Yapan Tüm Clientlar'a Typed Message Gönder</button>

            <div style="color: red" id="divAllClientMessages"></div>
            <div style="color: blue" id="divCallerClientMessages"></div>
            <div style="color: green" id="divOthersClientMessages"></div>
            <div style="color: darkgrey" id="divIndividualClientMessages"></div>
            <div style="color: darkorange" id="divGroupClientMessages"></div>
            
         
            
            
        </div>
    </div>
</div>